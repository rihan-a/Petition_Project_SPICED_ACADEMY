<div class="typical-page-wrapper">

    <ul class="nav-bar">
        <li><a href="/petition/signed">Signature</a></li>
        <li class="active"><a href="/signers">Signers List</a></li>
        <li><a href="/edit">Edit profile</a></li>
        <li><a href="/logout">Log out</a></li>
    </ul>

    <div class="petition-home"></div>
    <div class="main-title">
        <h3>
            We the undersigned citizens of
            {{city}}
            demand the relaunch of the 9-euro ticket.</h3>
    </div>

    <div class="signers-list-container">
        <ul>
            {{#signersList}}
                <li>{{#if signerUrl}}<a
                            href="{{signerUrl}}"
                            target="_blank"
                            class="user-link"
                        >{{signerName}}</a>
                    {{else}}
                        {{signerName}}
                    {{/if}}
                </li>
            {{/signersList}}
        </ul>
    </div>
</div>